{
  "$schema":"https://docs.renovatebot.com/renovate-schema.json",
  "extends":[
     "config:base"
  ],
  "ignoreUnstable":true,
  "timezone":"America/Los_Angeles",
  "schedule":[
     "after 3am on the 1st and 3rd day instance on Monday",
     "before 5pm on the 1st and 3rd day instance on Monday"
  ],
  "enabledManagers":[
    "npm"
 ],
 "vulnerabilityAlerts": {
   "labels": ["security"],
   "schedule": ["at any time"]
 },
  "rangeStrategy":"replace",
  "npm":{
     "stabilityDays":3
  },
  
  "reviewers": ["aligg"],
  "packageRules":[
     {
        "matchPaths": ["app/**"],
        "matchUpdateTypes":[
           "minor",
           "patch"
        ],
        "groupName":"all non-major dependencies",
        "groupSlug":"all-minor-patch"
     }
  ], 
  "ignoreDeps": []
}