{
  "$schema":"https://docs.renovatebot.com/renovate-schema.json",
  "extends":[
     "config:base", ":disableDependencyDashboard"
  ],
  "timezone":"America/Los_Angeles",
  "schedule":[
     "after 3am on the 1st and 3rd day instance on Monday"
  ],
  "enabledManagers":[
    "npm"
 ],
 "vulnerabilityAlerts": {
   "labels": ["security"],
   "schedule": ["at any time"],
   "enabled": true
 },
  "rangeStrategy":"replace",
  "ignoreUnstable":true,
  "labels": ["dependencies"],
  "prHourlyLimit": 5,
  "onlyNpm": true,
  "packageRules":[
     {
         "description": "Group all non-major updates into a single PR",
         "groupName":"all non-major dependencies",
         "groupSlug":"all-minor-patch",
         "matchPackagePatterns": ["*"],
        "matchUpdateTypes":[
           "minor",
           "patch",
           "pin",
            "pinDigest",
            "digest",
            "rollback",
            "bump"
        ]
     }
  ], 
  "ignoreDeps": [],
  "assignees": [],
  "reviewers": []
}